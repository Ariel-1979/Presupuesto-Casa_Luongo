<table id="tabla" class="table " style="width:100%">
    <thead>
        <tr class="text-center fw-bold text-primary">
            <th scope="col">Razón Social</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Teléfono</th>
            <th scope="col">Ampliar</th>
        </tr>
    </thead>
    <tbody>
        {{#each allCustomers}}
        <tr class="text-center fw-bold">
            <td>{{razon_social}}</td>
            <td>{{nombre}}</td>
            <td>{{apellido}}</td>
            <td>{{telefono}}</td>
            <td>
                <div class="btn-toolbar d-fle justify-content-center" role="toolbar"
                    aria-label="Toolbar with button groups">
                    <div class="btn-group btn-group-sm me-2" role="group" aria-label="First group">
                        <form action="cliente/single/{{id}}" method="get">
                            <button type="submit" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#editarProducto">más..</button>
                        </form>
                    </div>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>