{{#each user}}
<form action="/usuario/editar/{{id}}" method="post" id="editForm">
    <div class="mb-3 row">
        <label for="nombre" class="col-sm-2 col-form-label">Nombre</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext fw-bold" id="nombre" name="nombre" value="{{nombre}}">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="user" class="col-sm-2 col-form-label">Usuario</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext fw-bold" id="user" name="user" value="{{user}}">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control-plaintext fw-bold" id="password" name="password"
                value="{{password}}">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="nivel" class="col-sm-2 col-form-label">Nivel</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext fw-bold" id="nivel" name="nivel" value="{{nive}}">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="habilitado" class="col-sm-2 col-form-label">Estado</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext fw-bold" id="habilitado" name="habilitado"
                value="{{habilitado}}">
        </div>
    </div>
</form>
<form action="../delete/{{id}}" id="deleteForm" method="post"></form 
{{/each}}