<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class="rows">
    <div class="container d-flex justify-content-around mt-2 mb-2">
      <h3 class="text-center titulo">Listado de Productos </h3>
      <div class="btn-group btn-group-sm me-2" role="group" aria-label="Second group">
        <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#altaProducto"><i
            class="bi bi-plus-circle icono__verde"> Nuevo Producto</i></button>
      </div>
    </div>
  </div>
  {{>tablaProductos}}
</main>

<!-- Modal Alta de Producto-->
<div class="modal fade" id="altaProducto" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Alta de Producto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="producto/create" method="post" id="crearProducto" class="needs-validation" novalidate>
          {{>altaProducto}}
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
        <button form="crearProducto" type="submit" class="btn btn-success">Crear</button>
      </div>
    </div>
  </div>
</div>