<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="rows">
        <div class="container d-flex justify-content-around mt-2 mb-2">
            <h3 class="text-center titulo">Editar Categoria</h3>
        </div>
    </div>
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header bg-light justify-content-center">
                <h5 class="modal-title fw-bold text-success" id="exampleModalLabel">EDITAR NOMBRE</h5>
            </div>
            <div class="modal-body">
                {{#each singleCategory}}
                <form action="../edit/{{id}}" method="post" id="editarCategoria">
                    <div class="mb-3 row">
                        <label for="categoria" class="col-sm-2 col-form-label fw-bold">NOMBRE</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control fw-bold" name="nombre" value="{{nombre}}">
                        </div>
                    </div>
                </form>
                {{/each}}
            </div>
            <div class="modal-footer">
                <form action="/categoria" method="get">
                    <button type="submit" class="btn btn-outline-danger"><i
                            class="bi bi-x-circle icono__papelera"></i></button>
                </form>
                <button form="editarCategoria" type="submit" class="btn btn-outline-success"><i
                        class="bi bi-check2-all icono__editar"></i></button>
            </div>
        </div>
    </div>
</main>